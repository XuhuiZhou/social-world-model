{
  "version": 2,
  "functions": {
    "api/**": {
      "excludeFiles": "{.next,*.cache,node_modules,public,app}/**"
    }
  },
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/(.+\\.[a-zA-Z]+)$",
      "dest": "public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ]
}